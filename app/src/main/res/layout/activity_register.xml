<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <androidx.cardview.widget.CardView
                android:id="@+id/LoginLayoutCardView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="20dp"
                android:layout_marginRight="15dp"
                android:elevation="8dp"
                app:cardCornerRadius="20sp"
                app:cardElevation="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <RelativeLayout
                        android:id="@+id/LoginLayout"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/AdminLoginLbl"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/baloo"
                            android:gravity="center"
                            android:text="Register"
                            android:textColor="@color/rich_black"
                            android:textSize="27sp" />

                        <RelativeLayout
                            android:id="@+id/FullNameLayout"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:layout_below="@id/AdminLoginLbl"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="10dp"
                            android:layout_marginRight="30dp"
                            android:background="@drawable/login_input_field_container">

                            <ImageView
                                android:id="@+id/full_name_vector_icon"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="25dp"
                                android:src="@drawable/user_vector" />

                            <EditText
                                android:id="@+id/FullNameET"
                                android:layout_width="wrap_content"
                                android:layout_height="56dp"
                                android:layout_marginLeft="30dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginRight="20dp"
                                android:layout_marginBottom="5dp"
                                android:layout_toRightOf="@id/full_name_vector_icon"
                                android:background="@drawable/login_input_field"
                                android:fontFamily="@font/baloo"
                                android:hint="Full Name"
                                android:inputType="text"
                                android:textColor="@color/darker_grey"
                                android:textColorHint="@color/dark_grey"
                                android:textSize="17sp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/UIDLayout"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:layout_below="@id/FullNameLayout"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="35dp"
                            android:layout_marginRight="30dp"
                            android:background="@drawable/login_input_field_container">

                            <ImageView
                                android:id="@+id/user_vector_icon"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="25dp"
                                android:src="@drawable/envelope_vector" />

                            <EditText
                                android:id="@+id/EmailET"
                                android:layout_width="wrap_content"
                                android:layout_height="56dp"
                                android:layout_marginLeft="30dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginRight="20dp"
                                android:layout_marginBottom="5dp"
                                android:layout_toRightOf="@id/user_vector_icon"
                                android:background="@drawable/login_input_field"
                                android:fontFamily="@font/baloo"
                                android:hint="Email"
                                android:inputType="text"
                                android:textColor="@color/darker_grey"
                                android:textColorHint="@color/dark_grey"
                                android:textSize="17sp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/UsernameLayout"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:layout_below="@id/UIDLayout"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="35dp"
                            android:layout_marginRight="30dp"
                            android:background="@drawable/login_input_field_container">

                            <ImageView
                                android:id="@+id/username_vector_icon"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="25dp"
                                android:src="@drawable/user_vector" />

                            <EditText
                                android:id="@+id/UsernameET"
                                android:layout_width="wrap_content"
                                android:layout_height="56dp"
                                android:layout_marginLeft="30dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginRight="20dp"
                                android:layout_marginBottom="5dp"
                                android:layout_toRightOf="@id/username_vector_icon"
                                android:background="@drawable/login_input_field"
                                android:fontFamily="@font/baloo"
                                android:hint="Username"
                                android:inputType="text"
                                android:textColor="@color/darker_grey"
                                android:textColorHint="@color/dark_grey"
                                android:textSize="17sp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/PasswordLayout"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:layout_below="@id/UsernameLayout"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="35dp"
                            android:layout_marginRight="30dp"
                            android:background="@drawable/login_input_field_container">

                            <ImageView
                                android:id="@+id/password_vector_icon"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="25dp"
                                android:src="@drawable/password_vector" />

                            <EditText
                                android:id="@+id/PasswordET"
                                android:layout_width="wrap_content"
                                android:layout_height="56dp"
                                android:layout_marginStart="30dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginEnd="15dp"
                                android:layout_marginBottom="5dp"
                                android:layout_toRightOf="@id/password_vector_icon"
                                android:background="@drawable/login_input_field"
                                android:fontFamily="@font/baloo"
                                android:hint="Password"
                                android:inputType="textPassword"
                                android:textColor="@color/darker_grey"
                                android:textColorHint="@color/dark_grey"
                                android:textSize="17sp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/confirm_password_layout"
                            android:layout_width="match_parent"
                            android:layout_height="56dp"
                            android:layout_below="@id/PasswordLayout"
                            android:layout_marginLeft="30dp"
                            android:layout_marginTop="35dp"
                            android:layout_marginRight="30dp"
                            android:background="@drawable/login_input_field_container">

                            <ImageView
                                android:id="@+id/confirm_password_vector_icon"
                                android:layout_width="wrap_content"
                                android:layout_height="match_parent"
                                android:layout_marginLeft="25dp"
                                android:src="@drawable/password_vector" />

                            <EditText
                                android:id="@+id/ConfirmPasswordET"
                                android:layout_width="wrap_content"
                                android:layout_height="56dp"
                                android:layout_marginStart="30dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginEnd="15dp"
                                android:layout_marginBottom="5dp"
                                android:layout_toRightOf="@id/confirm_password_vector_icon"
                                android:background="@drawable/login_input_field"
                                android:fontFamily="@font/baloo"
                                android:hint="Confirm password"
                                android:inputType="textPassword"
                                android:textColor="@color/darker_grey"
                                android:textColorHint="@color/dark_grey"
                                android:textSize="17sp" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/FailureResponseMsgLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/confirm_password_layout"
                            android:layout_marginTop="4dp"
                            android:gravity="center"
                            android:visibility="gone">

                            <RelativeLayout
                                android:id="@+id/error_response_inner_layout"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true">

                                <ImageView
                                    android:id="@+id/failed_icon"
                                    android:layout_width="30dp"
                                    android:layout_height="30dp"
                                    android:src="@drawable/red_exclamation_mark" />

                                <TextView
                                    android:id="@+id/error_msg_tv"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_marginLeft="10dp"
                                    android:layout_toRightOf="@id/failed_icon"
                                    android:fontFamily="@font/baloo"
                                    android:text="Password did not match"
                                    android:textColor="@color/dark_red"
                                    android:textSize="18sp" />
                            </RelativeLayout>
                        </RelativeLayout>

                        <RelativeLayout
                            android:id="@+id/LoginButtonLayout"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_below="@id/FailureResponseMsgLayout"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp">

                            <Button
                                android:id="@+id/RegisterBtn"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerInParent="true"
                                android:background="@drawable/button"
                                android:fontFamily="@font/baloo"
                                android:paddingLeft="40dp"
                                android:paddingTop="12dp"
                                android:paddingRight="40dp"
                                android:paddingBottom="12dp"
                                android:text="Register"
                                android:textColor="@color/white"
                                android:textSize="20sp"
                                android:textStyle="bold" />
                        </RelativeLayout>
                    </RelativeLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_below="@id/LoginLayoutCardView"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="5dp"
                        android:gravity="center"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/baloo"
                            android:text="Already a member?"
                            android:textSize="16sp"
                            android:textStyle="normal" />

                        <TextView
                            android:id="@+id/login_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="10dp"
                            android:fontFamily="@font/baloo"
                            android:text="Login"
                            android:textColor="@color/rich_black"
                            android:textSize="16sp"
                            android:textStyle="normal" />
                    </LinearLayout>
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </RelativeLayout>
    </ScrollView>

</RelativeLayout>