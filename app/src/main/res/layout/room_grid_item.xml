<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    app:cardElevation="5dp">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="5dp">

        <ImageView
            android:id="@+id/ApplianceIcon"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_below="@id/DeleteBtn"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:id="@+id/DeleteBtn"
            android:layout_width="35dp"
            android:layout_height="35dp"
            android:src="@drawable/delete_cross_vector"
            android:layout_alignParentRight="true"
            app:tint="@color/darker_grey"
            android:rotation="45"/>

        <TextView
            android:id="@+id/RoomName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Room Name"
            android:gravity="center"
            android:layout_marginTop="3dp"
            android:fontFamily="@font/baloo"
            android:textColor="@color/rich_black"
            android:textSize="17sp"
            android:layout_below="@id/ApplianceIcon"/>

        <TextView
            android:id="@+id/DeviceCount"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="4 Devices"
            android:gravity="center"
            android:textSize="14sp"
            android:fontFamily="@font/baloo"
            android:textColor="@color/darker_grey"
            android:layout_below="@id/RoomName"/>

    </RelativeLayout>

</androidx.cardview.widget.CardView>